<Window x:Class="Parking_App_WPF.ManageUsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parking_App_WPF"
        mc:Ignorable="d"
        Title="ManageUsersWindow" Height="700" Width="570" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFCDCDCD">
        <TextBox x:Name="searchResident_txtbx" Height="40" TextWrapping="Wrap" Text="room number" VerticalAlignment="Top" Margin="155,100,277,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="findResident_label" Content="FIND A RESIDENT" HorizontalAlignment="Center" Margin="198,40,184,0" VerticalAlignment="Top" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="180" FontWeight="Bold"/>
        <Button x:Name="searchResident_btn" Content="SEARCH" Margin="0,100,172,0" VerticalAlignment="Top" Height="40" Background="#FF46F957" Foreground="White" FontWeight="Bold" UseLayoutRounding="True" HorizontalAlignment="Right" Width="100"/>
        <Label x:Name="addResident_label" Content="ADD A RESIDENT" HorizontalAlignment="Center" Margin="201,310,188,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="firstname_txtbx" Height="40" TextWrapping="Wrap" Text="first name" Margin="120,390,282,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Padding="5,0,0,0"/>
        <TextBox x:Name="roomnr_txtbx" Height="40" TextWrapping="Wrap" Text="room number" VerticalAlignment="Top" Margin="295,472,107,0" VerticalContentAlignment="Center" Padding="5,0,0,0"/>
        <TextBox x:Name="licenseplate_txtbx" Height="40" TextWrapping="Wrap" Text="licenseplate" VerticalAlignment="Top" Width="160" Margin="120,550,282,0" VerticalContentAlignment="Center" Padding="5,0,0,0"/>
        <TextBox x:Name="lastname_txtbox" Height="40" TextWrapping="Wrap" Text="last name" Margin="295,390,106,0" VerticalContentAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Padding="5,0,0,0"> </TextBox>
        <Button x:Name="createResident_btn" Content="CREATE" HorizontalAlignment="Center" Margin="0,610,0,0" VerticalAlignment="Top" Width="160" Height="35" Background="#FF46F957" Foreground="White" FontWeight="Bold"/>
        <TextBox x:Name="username_txtbx" Height="40" TextWrapping="Wrap" Text="username" Margin="120,472,282,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Padding="5,0,0,0"/>
        <Label x:Name="addResidentFirstname_label" Content="FIRST NAME" HorizontalAlignment="Left" Margin="120,361,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label x:Name="addResidentLastname_label" Content="LAST NAME" HorizontalAlignment="Left" Margin="295,361,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label x:Name="addResidentUsername_label" Content="USERNAME" HorizontalAlignment="Left" Margin="120,443,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label x:Name="addResidentRoom_label" Content="ROOM NUMBER" HorizontalAlignment="Left" Margin="295,443,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label x:Name="addResidentLicense_label" Content="LICENSEPLATE" HorizontalAlignment="Left" Margin="120,521,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Image x:Name="sign_out_png" Margin="40,70,0,0" Source="Images/sign_out.png" Stretch="Fill" MouseUp="goBackHome" HorizontalAlignment="Left" VerticalAlignment="Top" Height="42" Width="40" RenderTransformOrigin="0.5,0.5" Cursor="Hand">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label x:Name="label" Content="BACK" HorizontalAlignment="Left" MouseUp="goBackHome" VerticalAlignment="Top" Margin="40,40,0,0" FontWeight="Bold" FontSize="14" Cursor="Hand"/>
        <Button x:Name="searchResident_btn_Copy" Content="REMOVE" Margin="0,100,67,0" VerticalAlignment="Top" Height="40" Background="#FFF94646" Foreground="White" FontWeight="Bold" UseLayoutRounding="True" HorizontalAlignment="Right" Width="100"/>

    </Grid>
</Window>
